const fs = require("fs"); const path = require("path"); const { analyzeImageScene, extractEmotions } = require("./ai_extensions/image_scene_emotion_analyzer"); const { generateNarrationScript } = require("./ai_extensions/script_narrator"); const { createMotionFrames } = require("./engines/image_to_video_animator"); const { synthesizeVoice } = require("./engines/voice_synthesizer"); const { mergeVideoAndAudio } = require("./engines/video_audio_merger"); const { notifyUser } = require("./utils/notification");

/**

Main Function: Generate AI Cinematic Video from a Single Image

@param {string} imagePath - Path to the input image

@param {string} userId - User identifier

@param {string} voiceStyle - Voice style (e.g., "warm", "dramatic", "cinematic") */ async function generateVideoFromImage(imagePath, userId, voiceStyle = "cinematic") { try { console.log("ğŸ§  [VideoGen] Analyzing image..."); const sceneInfo = await analyzeImageScene(imagePath); const emotions = await extractEmotions(imagePath);

console.log("ğŸ“œ [VideoGen] Generating narrative script..."); const script = await generateNarrationScript(sceneInfo, emotions);

console.log("ğŸ™ï¸ [VideoGen] Synthesizing voice..."); const voicePath = await synthesizeVoice(script, voiceStyle);

console.log("ğŸï¸ [VideoGen] Creating motion frames from image..."); const animatedVideoPath = await createMotionFrames(imagePath, sceneInfo);

console.log("ğŸ¬ [VideoGen] Merging video with voiceover..."); const finalVideoPath = await mergeVideoAndAudio(animatedVideoPath, voicePath);

await notifyUser(userId, âœ… Video creation complete! Saved to: ${finalVideoPath}); return finalVideoPath; } catch (error) { console.error("âŒ [VideoGen Error]:", error); await notifyUser(userId, âŒ Failed to create video: ${error.message}); return null; } }


module.exports = { generateVideoFromImage };

